<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="fontExtraBold">@font/font_extra_bold</item>
        <item name="fontBold">@font/font_bold</item>
        <item name="fontLight">@font/font_light</item>
        <item name="fontNormal">@font/font_normal</item>
        <item name="fontThin">@font/font_thin</item>
        <item name="fontExtraLight">@font/font_extra_light</item>
    </style>

    <style name="CardNumberViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="MoneyCardViewStyle">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

    <style name="Yota"/>
    <style name="Yota.Text"/>

    <style name="Yota.Text.Title1">
        <item name="android:textColor">@color/balance_color</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">?fontNormal</item>
    </style>

    <style name="Yota.Text.Title2">
        <item name="android:textColor">@color/balance_color</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">?fontBold</item>
    </style>

    <style name="Yota.Text.Title3">
        <item name="android:textColor">@color/card_number_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">?fontBold</item>
    </style>

    <style name="Yota.Text.GradientTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">?fontBold</item>
        <item name="end_color">@color/gradient_title_end_color</item>
        <item name="start_color">@color/gradient_title_start_color</item>
    </style>
</resources>
